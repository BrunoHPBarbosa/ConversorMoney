<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.ConversorMoney" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ConversorMoney" parent="Base.Theme.ConversorMoney" />

    <style name="Circle" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="BaseTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseHintStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/material_dynamic_neutral20</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:backgroundTint">@color/material_dynamic_primary50</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
